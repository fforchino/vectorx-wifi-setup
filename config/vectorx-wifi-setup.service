[Unit]
Description=VectorX Wifi Setup
After=network.target

[Service]
Type=simple
User=root
StandardOutput=journal
StandardError=journal
# Edit this line, if needed, to specify where you installed the server
WorkingDirectory=/home/pi/vectorx-wifi-setup
# Edit this line, if needed, to set the correct path to node
ExecStart=/home/pi/vectorx-wifi-setup/run.sh 

[Install]
WantedBy=multi-user.target
